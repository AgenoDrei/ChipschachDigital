<% accTypes.forEach(function(type) { %>
    <div id="<%= type.id %>" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title"><%= type.name %></h4>
                </div>
                <div class="modal-body">
                    <div id="acc_<%= type.id %>" class="panel-group">
                        <% availSubtypes.forEach(function(subtype) { %>
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h4 class="panel-title">
                                        <a class="accordion-toggle" data-toggle="collapse" data-parent="#acc_<%= type.id %>"
                                            href="#<%= type.id %><%= subtype.id %>">
                                            <%= subtype.name %>
                                        </a>
                                    </h4>
                                </div>
                                <div id="<%= type.id %><%= subtype.id %>" class="panel-collapse collapse">
                                    <div id="<%= type.id %><%= subtype.id %>_panel-body" class="panel-body">
                                        <!-- Filled with js -->
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                </div>
                <div class="modal-footer">
                    <%= type.footer %>
                </div>
            </div>
        </div>
    </div>
<% }); %>

<div id="mp_g" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Mehrspieler Global - Lobby</h4>
            </div>
            <div class="modal-body">
                <div class="globalLobby openGameList">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Spielname</th>
                                <th>Level</th>
                                <th><center>Besetzung</center></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody id="globalGames_tbody">
                            <!-- Filled with js -->
                        </tbody>
                    </table>
                </div>
                <div class="globalLobby createNewGame">
                    <h4>
                        ... oder ein eigenes Spiel erstellen?
                    </h4>
                    <form>
                        <label for="newName">Spielname</label>
                        <input id="newName" class="form-control" type="text" placeholder="Name">
                        <label for="newLevel-select">Level</label>
                        <select id="newLevel-select" class="form-control">
                            <!-- Filled with js -->
                        </select>
                        <div class="radio">
                            <label><input type="radio" name="gameMode" value="unbeatable" checked>Figuren nicht schlagbar</label>
                        </div>
                        <div class="radio">
                            <label>
                                <input type="radio" name="gameMode" value="beatable">Figuren schlagbar
                            </label>
                        </div>
                    </form>
                    <button class="btn btn-primary" onclick="createNewGame();">Spiel erstellen</button>
                </div>
            </div>
            <div class="modal-footer">
                Hier kannst du ein neues Spiel erstellen oder bereits bestehenden Spielen beitreten.
            </div>
        </div>
    </div>
</div>

